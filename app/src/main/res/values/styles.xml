    <!-- Tab Layout -->
    <style name="TabLayoutTextAppearance" >
        <item name="android:textColor">@color/colorWelcomeKakaoText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">22sp</item>>
